<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.boardgamers.wbc"
	android:versionCode="24"
	android:versionName="2.0.1">

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name_long"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<receiver android:name=".ServiceStarterReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>

		<service android:name=".UpdateService"/>

		<service android:name=".CheckEventService"/>

		<activity
			android:name=".SplashScreen"
			android:configChanges="orientation|screenSize"
			android:label="@string/app_name_short">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name_short">
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"/>>
		</activity>
		<activity
			android:name=".SearchResultActivity"
			android:label="@string/search"
			android:launchMode="singleTop"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"/>
		</activity>
		<activity
			android:name=".EventActivity"
			android:label="@string/activity_event"
			android:windowSoftInputMode="stateHidden">
		</activity>
		<activity
			android:name=".MapActivity"
			android:label="@string/map">
		</activity>
		<activity
			android:name=".FilterActivity"
			android:label="@string/activity_filter">
		</activity>
		<activity
			android:name=".HelpActivity"
			android:label="@string/activity_help">
		</activity>
		<activity
			android:name=".AboutActivity"
			android:label="@string/activity_about">
		</activity>
		<activity
			android:name=".SettingsActivity"
			android:label="@string/activity_import_schedule">

			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<data
					android:host="*"
					android:mimeType="application/wbc"
					android:scheme="file"/>
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.wbc"
					android:scheme="file"/>
			</intent-filter>

		</activity>

		<provider
			android:name=".SearchSuggestionsProvider"
			android:authorities="org.boardgamers.wbc.SearchSuggestionsProvider"
			android:exported="false">
		</provider>
	</application>

</manifest>
